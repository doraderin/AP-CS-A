//3. Color spectrum. Write a program Spectrum.java that draws all 2^24 possible colors, by drawing for each red value a 256-by-256 array of color chips (one for each green and blue value).
import javax.swing.*;
import java.awt.*;
import java.awt.image.BufferedImage;

public class Spectrum extends JPanel {

    @Override
    protected void paintComponent(Graphics g) {
        super.paintComponent(g);

        int width = getWidth();
        int height = getHeight();
        BufferedImage image = new BufferedImage(width, height, BufferedImage.TYPE_INT_RGB);
        Graphics2D g2d = image.createGraphics();

        // Loop through all RGB colors and draw a single pixel for each
        for (int r = 0; r <= 255; r++) {
            for (int gVal = 0; gVal <= 255; gVal++) {
                for (int b = 0; b <= 255; b++) {
                    int rgb = (r << 16) | (gVal << 8) | b; // Create RGB color
                    g2d.setColor(new Color(rgb));
                    g2d.fillRect(r, gVal, 1, 1); // Draw a single pixel
                }
            }
        }

        g2d.dispose();
        g.drawImage(image, 0, 0, this);
    }

    public static void main(String[] args) {
        JFrame frame = new JFrame("RGB Spectrum");
        Spectrum spectrum = new Spectrum();
        frame.add(spectrum);
        frame.setSize(256, 256);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setVisible(true);
    }
}
