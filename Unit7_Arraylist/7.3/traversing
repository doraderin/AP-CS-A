//foreach, for and while loops can be used to traverse Arraylists

import java.util.*; 

public class traversing
{
    public static void main(String[] args)
    {
        //finds the sum of elements in list1
        ArrayList<Integer> list1 = new ArrayList<Integer>();
        list1.add(50);
        list1.add(30);
        list1.add(20);
        int total = 0;
        for (Integer value : list1)
        {
            total += value;
        }
        System.out.println("sum of all elements in array: " + total);


        //finds the product of elements in list
        ArrayList<Integer> list2 = new ArrayList<Integer>();
        list2.add(50);
        list2.add(30);
        list2.add(20);
        int total2 = 1;
        for (Integer value : list2)
        {
            total2 += value;
        }
        System.out.println("product of all elements in array: " + total);


    }
}

